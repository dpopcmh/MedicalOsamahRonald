<Window x:Class="MedicalProject.PatientRecordMedication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalProject"
        mc:Ignorable="d"
        Title="Medication" Height="225.548" WindowStartupLocation="CenterScreen" Width="489.416" ResizeMode="NoResize" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border BorderBrush="Blue" BorderThickness="2">
    <Grid>
        <Image Source="Icons/medicationImg1.jpg" Margin="1,0,-1.4,-0.4"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="20"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <TextBlock Text="New Medication" Grid.Column="3" Grid.Row="1" Margin="10 10 10 0" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Enter Medication" Grid.Column="3" Grid.Row="2" Margin="10 10 10 0" FontWeight="Bold" FontSize="10"/>
            <TextBlock Text="Enter Dosage" Grid.Column="3" Grid.Row="2" Margin="10,56,10,26" FontWeight="Bold" FontSize="10"/>
            <TextBox x:Name="txtMedication" Grid.Column="3" Grid.Row="2" Margin="10,25,15,52"/>
            <Button Content="Add Medication" Grid.Column="3" Grid.Row="4" Click="OkButton_Click" Margin="32,20,193,0" ToolTip="Click to Add New Medication"/>
            <Button Content="Close" Grid.Column="3" Grid.Row="4" Click="CancelButton_Click" Margin="175,20,50,0" ToolTip="Back to Patient Record"/>
            <TextBox x:Name="txtDosage" Grid.Column="3" Grid.Row="2" Margin="10,69,15,8"/>
        </Grid>
    </Grid>
    </Border>
</Window>
